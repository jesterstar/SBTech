{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "window": true,
    "$": true,
    "L": true,
    "jQuery": true,
    "Highcharts": true
  },
  "rules": {
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 2
      }
    ],
    /*"linebreak-style": [
      "error",
      "unix"
    ],*/
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "off",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ]
  }
}